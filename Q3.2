cheat <- function(question_nr) {
  if (question_nr == 1) {
    print(deparse({
      install.packages("truncnorm")
      library(truncnorm)
      
      grades <- rtruncnorm(
        60,
        a = 0,
        b = 10,
        mean = 8,
        sd = 2
      )
      
      # only 0.5 points given
      rounded_grades <- round(grades * 2) / 2
      
      hist(rounded_grades, breaks = seq(0, 10, by = 0.5))
    }))
  } else if (question_nr == 2) {
    print(deparse({
      df <- read.csv2(
        "schiphol_data.csv",
        header = TRUE,
        sep = ",",
        dec = "."
      )
      
      # only consider last 70 years
      df_70 <- df %>%
        filter(df$DATE >= 1954)
      
      ggplot(data = df_70) +
        geom_point(mapping = aes(x = DATE, y = TMIN),
                   color = "blue")
    }))
  } else if (question_nr == 3) {
    print(deparse({
      install.packages('titanic')
      library(titanic)
      
      df_tit <- titanic_train
      df_tit$Survived <-
        ifelse(df_tit$Survived == 0, "dead", "alive")
      
      ggplot(data = df_tit, aes(x = Sex, fill = factor(Survived, levels = c(
        "dead", "alive"
      )))) +
        geom_bar(stat = "count") +
        labs(fill = "How did it go?")
    }))
  }
}

cheat(2)

